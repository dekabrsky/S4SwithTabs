<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/dName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#009688"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="NAME NAME NAME"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/dTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="time" />

    <TextView
        android:id="@+id/dAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dName"
        android:text="adress"
        android:textSize="17sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/dInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dAdress"
        android:text="@android:string/status_bar_notification_info_overflow"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dInfo"
        android:layout_alignParentRight="true"
        android:text="creator"
        android:textStyle="normal|bold" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/dCreator"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/JoinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:background="@android:color/transparent"
        android:onClick="join"
        android:text="Присоединиться" />

    <Button
        android:id="@+id/VisitorsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:onClick="visitors"
        android:text="Участники" />
</RelativeLayout>
